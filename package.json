{
  "name": "@streamlined-cms/client-sdk",
  "version": "0.1.0",
  "private": true,
  "main": "dist/streamlined-cms.js",
  "module": "dist/streamlined-cms.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "demo": "npm run build && ln -sf ../dist demo/dist && vite demo --port 3000",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:browser": "vitest run tests/browser",
    "test:watch": "vitest",
    "test:browser:watch": "vitest tests/browser",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.{ts,html}\" \"demo/**/*.{html,css,js}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.{ts,html}\" \"demo/**/*.{html,css,js}\""
  },
  "author": "Matthew Brisebois",
  "license": "LGPL-3.0",
  "description": "Streamlined CMS Client SDK - Lightweight library for inline website editing",
  "keywords": [
    "cms",
    "inline-editing",
    "contenteditable",
    "javascript-library"
  ],
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@vitest/coverage-v8": "^2.1.8",
    "get-port": "^7.1.0",
    "jsdom": "^25.0.1",
    "playwright": "^1.57.0",
    "prettier": "^3.6.2",
    "rollup": "^4.30.1",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vite": "^6.0.7",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "loganite": "^0.1.4"
  }
}
